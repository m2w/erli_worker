  {erlydtl, "0.7.*", {git, "git://github.com/evanmiller/erlydtl", "HEAD"}},
  {jsx, "1.4.*", {git, "git://github.com/talentdeficit/jsx", "HEAD"}},
  {egeoip, "1.0", {git, "git://github.com/mochi/egeoip", "HEAD"}}]}.
